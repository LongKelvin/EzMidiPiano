<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:background="@color/colorPrimaryDark">

        <Button
            android:id="@+id/recordButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Start Detection"
            android:layout_marginRight="10dp"
            android:background="@color/colorBackground"/>
        <Button
            android:id="@+id/enableChordMode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Detect Chord"
            android:layout_marginRight="10dp"
            android:background="@color/colorBackground"/>
        <Button
            android:id="@+id/enableNoteMode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Detect Note"
            android:layout_marginRight="10dp"
            android:background="@color/colorBackground"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_staffView"
                android:layout_width="409dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:text="Staffline View"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_pianoView"
                android:layout_width="437dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:text="Piano View"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.example.chordec.chordec.CSurfaceView.StaffView
                android:id="@+id/staff_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.example.chordec.chordec.CSurfaceView.ChordView
                        android:id="@+id/chord_view"
                        android:layout_width="match_parent"
                        android:layout_height="120dp" />

                    <TextView
                        android:id="@+id/chordText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="C4"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pitchText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="440"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp"
                        android:translationZ="90dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/timerLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:text="@string/_0_00"
            android:textAlignment="center"
            android:textColor="#666"
            android:textSize="25sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recordLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/record_layout_background"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="@dimen/record_layout_button_width"
            android:layout_height="@dimen/record_layout_button_height"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:background="@android:color/white" />

<!--        <ImageButton-->
<!--            android:id="@+id/recordingImage"-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="100dp"-->
<!--            android:layout_marginStart="@+id/pauseButton"-->
<!--            android:src="@drawable/microphone"-->
<!--            android:visibility="visible"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:layout_marginLeft="@+id/pauseButton" />-->

        <ImageButton
            android:id="@+id/stopButton"
            android:layout_width="@dimen/record_layout_button_width"
            android:layout_height="@dimen/record_layout_button_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:background="@android:color/transparent"
            android:src="@drawable/stop" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>