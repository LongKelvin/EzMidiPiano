<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="16dp"
                android:layout_height="21dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@drawable/btn_back"
                android:contentDescription="@string/select_sound_"
                android:text="@string/select_sound" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:text="@string/midi_device"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorBackground" />

            <Spinner
                android:id="@+id/deviceNameSpinner"
                android:layout_width="300dp"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@drawable/spinner_background"
                android:dropDownSelector="@color/colorAccent"
                android:spinnerMode="dropdown"
                android:textColor="@color/colorPrimary" />

            <ImageButton
                android:id="@+id/btn_selectSound"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@drawable/btn_select_sound"
                android:contentDescription="@string/select_sound_"
                android:text="@string/select_sound" />

            <Button
                android:id="@+id/btn_recording"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@drawable/recording_button"
                android:text="@string/recording" />

            <ImageButton
                android:id="@+id/btn_touchMode"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@drawable/btn_expand_view"
                android:contentDescription="@string/select_sound_"
                android:text="@string/expand_piano_view" />


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/midi_input"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ListView
            android:id="@+id/midiInputEventListView"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll">

        </ListView>

        <TextView
            android:id="@+id/note_letter"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|fill|fill_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:layerType="software"
            android:requiresFadingEdge="horizontal|vertical"
            android:text="@string/note_C"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/color_blueForFb"
            android:textStyle="normal|bold|italic"
            android:typeface="sans"
            app:autoSizeTextType="none" />
        <TextView
            android:id="@+id/note_D"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|fill|fill_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:layerType="software"
            android:requiresFadingEdge="horizontal|vertical"
            android:text="@string/note_C"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/color_blueForFb"
            android:textStyle="normal|bold|italic"
            android:typeface="sans"
            app:autoSizeTextType="none" />
        <TextView
            android:id="@+id/note_E"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|fill|fill_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:layerType="software"
            android:requiresFadingEdge="horizontal|vertical"
            android:text="@string/note_C"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/color_blueForFb"
            android:textStyle="normal|bold|italic"
            android:typeface="sans"
            app:autoSizeTextType="none" />
        <TextView
            android:id="@+id/note_F"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|fill|fill_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:layerType="software"
            android:requiresFadingEdge="horizontal|vertical"
            android:text="@string/note_C"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/color_blueForFb"
            android:textStyle="normal|bold|italic"
            android:typeface="sans"
            app:autoSizeTextType="none" />
        <TextView
            android:id="@+id/note_G"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|fill|fill_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:layerType="software"
            android:requiresFadingEdge="horizontal|vertical"
            android:text="@string/note_C"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/color_blueForFb"
            android:textStyle="normal|bold|italic"
            android:typeface="sans"
            app:autoSizeTextType="none" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/tv_instruments"
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|fill|fill_horizontal|center_vertical"
                android:layout_margin="0dp"
                android:layerType="software"
                android:requiresFadingEdge="horizontal|vertical"
                android:text="@string/instruments_name_tv"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorTextHighLightRed"
                android:textStyle="normal|bold|italic"
                android:typeface="sans"
                android:background="@color/colorPrimaryDark"
                app:autoSizeTextType="none" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/instruments_name"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorPrimaryDark"
                    android:layerType="software"
                    android:requiresFadingEdge="horizontal|vertical"
                    android:text="@string/name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorTextHighLightRed"
                    android:textStyle="normal|bold|italic"
                    android:typeface="sans"
                    app:autoSizeTextType="none" />

                <TextView
                    android:id="@+id/ins_name"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorPrimaryDark"
                    android:layerType="software"
                    android:requiresFadingEdge="horizontal|vertical"
                    android:text="Grand Piano"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/color_yellow_highlight"
                    android:textStyle="normal|bold|italic"
                    android:typeface="sans"
                    app:autoSizeTextType="none" />


            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="50dp"
                        android:id="@+id/instruments_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/grand_piano" />


                </LinearLayout>
            </LinearLayout>
        </FrameLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/midi_output"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/midiOutputEventListView"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:layout_weight="1"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll" />

    <com.kelvin.midi.ezmusic.view.PianoView
        android:id="@+id/piano_view"
        android:layout_width="match_parent"
        android:layout_height="80dp" />


</LinearLayout>