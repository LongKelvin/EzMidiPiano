<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PianoLargeViewActivity">

    <com.kelvin.midi.ezmusic.view.PianoLargeView
        android:id="@+id/piano_large_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.kelvin.midi.ezmusic.view.PianoLargeView>

    <Button
        android:id="@+id/btn_decrease_piano_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="64dp"
        android:background="@color/color_blueForFb"
        android:shadowColor="#6C5151"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorHighLightGreenAccent"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/piano_large_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_increase_piano_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="496dp"
        android:layout_marginBottom="64dp"
        android:background="@color/color_blueForFb"
        android:text="+"
        android:textColor="@color/colorHighLightGreenAccent"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/piano_large_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>